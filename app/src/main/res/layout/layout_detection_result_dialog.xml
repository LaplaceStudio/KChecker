<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="364dp"
    android:layout_height="275dp"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="@dimen/btn_small_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_detection_result"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="检测结果"
            android:textColor="@color/control_text"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/tv_detection_message"
            android:layout_width="match_parent"
            android:layout_height="18sp"
            android:gravity="center_horizontal"
            android:text="未检测到按键，请重新拍照检测，并保持与模板重合"
            android:textSize="13sp"
            android:textColor="@color/background"
            tools:ignore="HardcodedText" />
        <RelativeLayout
            android:id="@+id/rl_result_panel_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/control_text">

            <ImageView
                android:id="@+id/iv_result_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_large_height"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_tv_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_tv"
                android:gravity="center"
                android:text="详情"
                android:textColor="@color/control_text"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/btn_tv_continue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/selector_btn_tv"
                android:gravity="center"
                android:text="保存并继续"
                android:textColor="@color/control_text"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/btn_tv_retry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/selector_btn_tv"
                android:gravity="center"
                android:text="重新检测"
                android:textColor="@color/control_text"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/btn_tv_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_tv"
                android:gravity="center"
                android:text="关闭"
                android:textColor="@color/control_text"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>