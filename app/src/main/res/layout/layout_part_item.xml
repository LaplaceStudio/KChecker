<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_card_normal_height"
    android:layout_marginHorizontal="6dp"
    android:layout_marginTop="4dp"
    android:backgroundTint="@color/bg_item_card"
    android:tag="@string/item_card_tag"
    app:cardCornerRadius="12dp"
    tools:ignore="MissingConstraints"
    tools:targetApi="lollipop">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_card_margin"
        app:cardCornerRadius="10dp" >
        <ImageView
            android:id="@+id/im_part_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/part_item_legend"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@color/item_card_text_name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:text="Pass"
        android:textAllCaps="false"
        android:textColor="@color/item_card_text_name"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_item_check_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="@dimen/item_card_margin"
        android:text="2020-08-08 10:08"
        android:textAllCaps="false"
        android:textColor="#7FC4E4"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />
</androidx.cardview.widget.CardView>
