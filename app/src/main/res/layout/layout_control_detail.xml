<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginTop="4dp"
    android:paddingVertical="4dp"
    android:paddingHorizontal="2dp"
    android:backgroundTint="@color/design_default_color_on_primary"
    android:tag="@string/item_card_tag"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/btn_small_height_half"
        android:paddingVertical="4dp">
        <androidx.cardview.widget.CardView
            android:layout_width="84dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_control_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="KEY"
                android:textSize="@dimen/btn_normal_text"
                android:textColor="@color/control_text"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="@dimen/btn_small_height_half"
            android:layout_height="match_parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="84dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_control_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/btn_small_height_half"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_control_predict_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="KEY"
                android:textSize="@dimen/btn_normal_text"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_control_confidence"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="KEY"
                android:textSize="@dimen/btn_normal_text"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>