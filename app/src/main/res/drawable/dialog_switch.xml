<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <padding android:bottom="2dp" android:right="36dp" android:left="2dp" android:top="2dp" />
                    <solid android:color="@color/btn_negative_pressed" />
                    <corners android:radius="22dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="32dp" android:height="20dp" />
                    <solid android:color="@color/control_text" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <padding android:bottom="2dp" android:right="2dp" android:left="36dp" android:top="2dp" />
                    <solid android:color="@color/btn_positive_unpressed" />
                    <corners android:radius="22dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="32dp" android:height="20dp" />
                    <solid android:color="@color/control_text" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>