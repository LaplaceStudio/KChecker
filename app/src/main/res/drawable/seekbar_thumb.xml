<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <corners android:radius="@dimen/btn_normal_height_half"/>
        <solid android:color="@color/btn_negative_unpressed"/>
        <stroke android:color="@color/colorPrimary" android:width="3dp"/>
        <gradient android:startColor="@color/btn_negative_unpressed" android:endColor="@color/btn_negative_unpressed_g"/>
        <size android:width="@dimen/btn_normal_height" android:height="@dimen/btn_normal_height_half"/>
    </shape>
</item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_normal_height_half"/>
            <stroke android:color="@color/colorPrimary" android:width="3dp"/>
            <solid android:color="@color/colorPrimary"/>
            <gradient android:startColor="@color/btn_negative_pressed" android:endColor="@color/btn_negative_pressed"/>
            <size android:width="@dimen/btn_normal_height" android:height="@dimen/btn_normal_height_half"/>
        </shape>
    </item>
</selector>