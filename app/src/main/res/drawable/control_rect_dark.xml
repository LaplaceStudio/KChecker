<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/control_corner_small_radius"/>
            <solid android:color="@color/control_dark_background" />
            <stroke android:width="@dimen/control_stroke_width" android:color="@color/colorPrimaryDark"/>
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/control_corner_small_radius"/>
            <solid android:color="@color/control_dark_background" />
            <stroke android:width="@dimen/control_stroke_width" android:color="@color/colorPrimaryDark" android:dashWidth="0dp" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>
</selector>